# MongoDB Connection
MONGODB_URI=your_mongodb_connection_string_here

# JWT Authentication Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Frontend URL
VITE_API_URL=http://localhost:5000/api

# Stripe Payment Gateway
# Get these from your Stripe Dashboard: https://dashboard.stripe.com/
# Test keys for development (replace with live keys for production)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Webhook endpoint secret (generate from Stripe Dashboard for each webhook endpoint)
# Generated when running: stripe listen --forward-to localhost:5000/api/stripe/webhook
STRIPE_WEBHOOK_ENDPOINT_SECRET=whsec_your_webhook_secret_here

# Port (optional, defaults to 5000)
PORT=5000

# Cloudinary Configuration
# Get these from your Cloudinary Dashboard: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Twilio Configuration (for SMS OTP)
# Get these from your Twilio Console: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number
